<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentGastronomy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">

        <FrameLayout
            android:id="@+id/btnRestaurants"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@drawable/p3restaurante">

            <TextView
                android:id="@+id/textRestaurants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/restaurants"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnTypicalMeals"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/p3comida_tipica">

            <TextView
                android:id="@+id/textTypMeals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/typicalMeals"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>